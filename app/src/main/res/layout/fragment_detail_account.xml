<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_detail_account">

    <Button
        android:id="@+id/editB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="45dp"
        android:background="@color/PrimaryColor2"
        android:fontFamily="@font/mainfont"
        android:text="수정"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sMemo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="288dp"
        android:fontFamily="@font/mainfont"
        android:text="지출금액"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sCate" />

    <TextView
        android:id="@+id/sMemo"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="229dp"
        android:fontFamily="@font/mainfont"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="141dp"
        android:fontFamily="@font/mainfont"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sPay"
        app:layout_constraintTop_toBottomOf="@+id/sCate" />

    <TextView
        android:id="@+id/sPay"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/mainfont"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="284dp"
        android:fontFamily="@font/mainfont"
        android:text="날짜"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sDate"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="231dp"
        android:fontFamily="@font/mainfont"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="84dp"
        android:layout_height="33dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="287dp"
        android:fontFamily="@font/mainfont"
        android:text="종류"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sDate" />

    <TextView
        android:id="@+id/sCate"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="229dp"
        android:fontFamily="@font/mainfont"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/deleteB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="76dp"
        android:background="@color/PrimaryColor2"
        android:fontFamily="@font/mainfont"
        android:onClick="onClick"
        android:text="삭제"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editB"
        app:layout_constraintTop_toBottomOf="@+id/sMemo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="337dp"
        android:fontFamily="@font/mainfont"
        android:text="메모"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sPay" />

</androidx.constraintlayout.widget.ConstraintLayout>