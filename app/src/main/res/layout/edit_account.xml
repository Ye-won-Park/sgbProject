<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editCategory"
        android:layout_width="243dp"
        android:layout_height="65dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="106dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:fontFamily="@font/mainfont"/>

    <EditText
        android:id="@+id/editMemo"
        android:layout_width="243dp"
        android:layout_height="65dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="106dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="250dp"
        android:text="상세 내용"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPay"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="250dp"
        android:text="금액"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCategory"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="250dp"
        android:text="카테고리"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="207dp"
        android:text="소비 기록 "
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="57dp"
        android:layout_height="27dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="12dp"
        android:text="날짜"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:fontFamily="@font/mainfont"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:onClick="OnClickHandler"
        android:text="구매일"
        app:layout_constraintEnd_toStartOf="@+id/consumeDate"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/consumeDate"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mainfont"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="281dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="42dp"
        android:onClick="onClick"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMemo"
        android:fontFamily="@font/mainfont"/>

    <EditText
        android:id="@+id/editPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_weight="1"
        android:ems="10"
        android:fontFamily="@font/mainfont"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="117dp"
        android:text="원"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editPay"
        app:layout_constraintTop_toBottomOf="@+id/editCategory"
        android:fontFamily="@font/mainfont"/>
</androidx.constraintlayout.widget.ConstraintLayout>