<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView_schedule"
        android:layout_width="413dp"
        android:layout_height="388dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_selectionColor="#F0EDFF"
        app:mcv_showOtherDates="defaults"
        android:fontFamily="@font/mainfont"
        app:mcv_dateTextAppearance="@style/tab_text"
        app:mcv_headerTextAppearance="@style/tab_text"
        app:mcv_weekDayTextAppearance="@style/tab_text"/>

    <TextView
        android:id="@+id/detailTextView2"
        android:layout_width="314dp"
        android:layout_height="179dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date2"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/date2"
        android:layout_width="176dp"
        android:layout_height="31dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="-55dp"
        android:layout_marginEnd="188dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView_schedule"
        android:fontFamily="@font/mainfont"/>
</androidx.constraintlayout.widget.ConstraintLayout>

