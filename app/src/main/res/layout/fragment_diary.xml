<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ShowDay"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/ShowMonth"
        android:layout_width="97dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ShowDay"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mainfont"/>

    <TextView
        android:id="@+id/ShowYear"
        android:layout_width="82dp"
        android:layout_height="21dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ShowDay"
        app:layout_constraintTop_toBottomOf="@+id/ShowMonth"
        android:fontFamily="@font/mainfont"/>

    <EditText
        android:id="@+id/ContextTextView"
        android:hint="내용"
        android:layout_width="299dp"
        android:layout_height="422dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="57dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleTextView"
        tools:ignore="SpeakableTextPresentCheck"
        android:fontFamily="@font/mainfont"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:text="작성"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/mainfont"/>

    <EditText
        android:id="@+id/TitleTextView"
        android:hint="제목"
        android:layout_width="292dp"
        android:layout_height="52dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ShowDay"
        tools:ignore="SpeakableTextPresentCheck"
        android:fontFamily="@font/mainfont"/>

</androidx.constraintlayout.widget.ConstraintLayout>